<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/boss_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        card_view:elevation="@dimen/cardview_elevation"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/boss_item_name"
                android:textSize="@dimen/heading_text_size"
                android:textColor="@android:color/primary_text_light"
                android:layout_margin="@dimen/inner_text_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/available_heroic_indicator"
                android:layout_toRightOf="@+id/boss_item_name"
                android:layout_marginTop="@dimen/outter_text_margin"
                android:layout_marginRight="@dimen/outter_text_margin"
                android:src="@drawable/ic_brightness_low_black_12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/available_normal_indicator"
                android:layout_marginTop="@dimen/outter_text_margin"
                android:src="@drawable/ic_brightness_1_black_12dp"
                android:layout_toRightOf="@+id/available_heroic_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/level_img"
                android:src="@drawable/ic_star_black_12dp"
                android:layout_margin="@dimen/inner_text_margin"
                android:layout_below="@+id/boss_item_name"
                android:layout_alignLeft="@+id/boss_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/boss_level"
                android:layout_below="@+id/boss_item_name"
                android:layout_toRightOf="@id/level_img"
                android:textColor="@android:color/primary_text_light"
                android:layout_margin="@dimen/inner_text_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/boss_id_img"
                android:layout_below="@+id/boss_item_name"
                android:layout_margin="@dimen/inner_text_margin"
                android:layout_toRightOf="@+id/boss_level"
                android:src="@drawable/ic_person_black_12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/boss_id"
                android:textColor="@android:color/primary_text_light"
                android:layout_toRightOf="@+id/boss_id_img"
                android:layout_below="@+id/boss_item_name"
                android:layout_margin="@dimen/inner_text_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/boss_zone_img"
                android:layout_below="@+id/boss_item_name"
                android:layout_margin="@dimen/inner_text_margin"
                android:src="@drawable/ic_map_black_12dp"
                android:layout_toRightOf="@+id/boss_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/boss_zone_id"
                android:layout_toRightOf="@+id/boss_zone_img"
                android:layout_below="@+id/boss_item_name"
                android:textColor="@android:color/primary_text_light"
                android:layout_margin="@dimen/inner_text_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/boss_health_img"
                android:layout_toRightOf="@+id/boss_zone_id"
                android:layout_margin="@dimen/inner_text_margin"
                android:src="@drawable/ic_favorite_black_12dp"
                android:layout_below="@+id/boss_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/boss_health"
                android:layout_toRightOf="@+id/boss_health_img"
                android:layout_below="@+id/boss_item_name"
                android:textColor="@android:color/primary_text_light"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/inner_text_margin"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/boss_description"
                android:layout_below="@+id/boss_level"
                android:textColor="@android:color/primary_text_light"
                android:layout_margin="@dimen/outter_text_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>