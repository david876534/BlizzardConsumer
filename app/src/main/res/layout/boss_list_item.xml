<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/boss_card"
        card_view:cardBackgroundColor="@color/color_cardview_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        card_view:cardCornerRadius="@dimen/cardview_corner_radius"
        card_view:elevation="@dimen/cardview_elevation"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/boss_item_name"
                android:textSize="@dimen/heading_text_size"
                android:textColor="@android:color/primary_text_light"
                android:layout_margin="@dimen/inner_text_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/available_heroic_indicator"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/outter_text_margin"
                android:layout_marginLeft="@dimen/outter_text_margin"
                android:src="@drawable/ic_security_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/available_normal_indicator"
                android:layout_marginTop="@dimen/outter_text_margin"
                android:src="@drawable/ic_beenhere_black_24dp"
                android:layout_toLeftOf="@+id/available_heroic_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/boss_information"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inner_text_margin"
                android:layout_marginBottom="@dimen/outter_text_margin"
                android:layout_below="@+id/boss_item_name"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/level_img"
                        android:layout_marginRight="@dimen/small_item_margin"
                        android:src="@drawable/ic_star_black_12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/boss_level"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/boss_id_img"
                        android:layout_marginRight="@dimen/small_item_margin"
                        android:src="@drawable/ic_person_black_12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/boss_id"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/boss_zone_img"
                        android:src="@drawable/ic_map_black_12dp"
                        android:layout_marginRight="@dimen/small_item_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/boss_zone_id"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/boss_health_img"
                        android:src="@drawable/ic_favorite_black_12dp"
                        android:layout_marginRight="@dimen/small_item_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/boss_health"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/boss_description"
                android:layout_below="@+id/boss_information"
                android:textColor="@android:color/primary_text_light"
                android:layout_margin="@dimen/outter_text_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>